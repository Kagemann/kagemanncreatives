# WordPress Configuration - {{CLIENT_TITLE}}
# Copy this file to .env and update the values

# Database Configuration
DB_NAME={{CLIENT_SLUG}}_wp
DB_USER={{CLIENT_SLUG}}_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_CHARSET=utf8mb4
DB_COLLATE=utf8mb4_unicode_ci

# WordPress Configuration
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=false

# Security Keys (generate new ones at https://api.wordpress.org/secret-key/1.1/salt/)
AUTH_KEY='your_auth_key_here'
SECURE_AUTH_KEY='your_secure_auth_key_here'
LOGGED_IN_KEY='your_logged_in_key_here'
NONCE_KEY='your_nonce_key_here'
AUTH_SALT='your_auth_salt_here'
SECURE_AUTH_SALT='your_secure_auth_salt_here'
LOGGED_IN_SALT='your_logged_in_salt_here'
NONCE_SALT='your_nonce_salt_here'

# Site Configuration
WP_HOME=https://{{CLIENT_DOMAIN}}
WP_SITEURL=https://{{CLIENT_DOMAIN}}/wp
WP_CONTENT_URL=https://{{CLIENT_DOMAIN}}/wp-content
WP_CONTENT_DIR=/path/to/wordpress/wp-content

# Performance Configuration
WP_CACHE=true
COMPRESS_CSS=true
COMPRESS_SCRIPTS=true
CONCATENATE_SCRIPTS=true
ENFORCE_GZIP=true

# Security Configuration
DISALLOW_FILE_EDIT=true
DISALLOW_FILE_MODS=true
FORCE_SSL_ADMIN=true
WP_POST_REVISIONS=3
AUTOSAVE_INTERVAL=300
WP_CRON_LOCK_TIMEOUT=60

# Memory and Limits
WP_MEMORY_LIMIT=256M
WP_MAX_MEMORY_LIMIT=512M
WP_MAX_EXECUTION_TIME=300
WP_MAX_INPUT_VARS=3000

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your_email@{{CLIENT_DOMAIN}}
