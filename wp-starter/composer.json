{
  "name": "kagemann-creatives/wp-starter",
  "description": "Production-ready WordPress starter kit for SMB websites",
  "type": "wordpress-starter",
  "license": "MIT",
  "authors": [
    {
      "name": "Kagemann Creatives",
      "email": "hello@kagemanncreatives.com",
      "homepage": "https://kagemanncreatives.com"
    }
  ],
  "keywords": [
    "wordpress",
    "starter-kit",
    "block-theme",
    "smb",
    "web-agency",
    "performance",
    "security",
    "accessibility"
  ],
  "homepage": "https://github.com/kagemann-creatives/wp-starter",
  "support": {
    "issues": "https://github.com/kagemann-creatives/wp-starter/issues",
    "source": "https://github.com/kagemann-creatives/wp-starter"
  },
  "require": {
    "php": ">=8.0",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^2.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "KagemannCreatives\\WPStarter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KagemannCreatives\\WPStarter\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "lint": "phpcs --standard=WordPress .",
    "lint:fix": "phpcbf --standard=WordPress .",
    "compatibility": "phpcs --standard=PHPCompatibilityWP --runtime-set testVersion 8.0- .",
    "security": "composer audit",
    "quality": [
      "@lint",
      "@compatibility",
      "@security"
    ],
    "build": [
      "@quality",
      "@test"
    ],
    "post-install-cmd": [
      "composer dump-autoload"
    ],
    "post-update-cmd": [
      "composer dump-autoload"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "8.0"
    }
  },
  "extra": {
    "installer-name": "wp-starter",
    "wordpress-install-dir": "wp",
    "wordpress-content-dir": "wp-content",
    "wordpress-config-dir": "wp-config",
    "wordpress-muplugins-dir": "wp-content/mu-plugins",
    "wordpress-plugins-dir": "wp-content/plugins",
    "wordpress-themes-dir": "wp-content/themes",
    "wordpress-uploads-dir": "wp-content/uploads"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "https://github.com/kagemann-creatives/wp-starter"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true
}
