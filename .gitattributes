# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf

# CSS files
*.css text eol=lf

# JavaScript files
*.js text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archive files
*.zip binary
*.tar.gz binary
*.rar binary

# Exclude from export
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
.prettierrc export-ignore
package.json export-ignore
package-lock.json export-ignore
yarn.lock export-ignore
composer.lock export-ignore
Makefile export-ignore
