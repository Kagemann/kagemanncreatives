{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "custom": {
      "radius": { "sm": "6px", "md": "12px", "lg": "20px" },
      "container": { "max": "1200px", "pad": "clamp(16px, 4vw, 40px)" }
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "spacing": {
      "spacingScale": {
        "steps": 7,
        "mediumStep": "1.25"
      },
      "units": [ "px", "em", "rem", "vw", "vh" ]
    },
    "typography": {
      "fluid": true,
      "dropCap": false,
      "fontFamilies": [
        { "fontFamily": "Work Sans, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto", "name": "Body", "slug": "body" },
        { "fontFamily": "Space Mono, ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono'", "name": "Headings Mono", "slug": "heading" }
      ],
      "fontSizes": [
        { "slug": "xs", "size": "clamp(12px, 0.86vw, 14px)", "name": "XS" },
        { "slug": "sm", "size": "clamp(14px, 1vw, 16px)", "name": "SM" },
        { "slug": "md", "size": "clamp(16px, 1.15vw, 18px)", "name": "MD" },
        { "slug": "lg", "size": "clamp(20px, 1.5vw, 24px)", "name": "LG" },
        { "slug": "xl", "size": "clamp(28px, 3vw, 40px)", "name": "XL" },
        { "slug": "xxl", "size": "clamp(36px, 4.5vw, 56px)", "name": "XXL" }
      ],
      "lineHeight": "1.6"
    },
    "color": {
      "palette": [
        { "slug": "bg", "color": "#F2F5F9", "name": "Background" },
        { "slug": "fg", "color": "#0D0D0D", "name": "Foreground" },
        { "slug": "primary", "color": "#0C1117", "name": "Primary" },
        { "slug": "accent", "color": "#5B8DEF", "name": "Accent" }
      ]
    },
    "blocks": {
      "core/paragraph": { "typography": { "fontSize": "var(--wp--preset--font-size--md)" } },
      "core/heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700"
        }
      },
      "core/button": {
        "border": { "radius": "var(--radius-md)" },
        "typography": { "fontWeight": "600" },
        "color": { "text": "#FFFFFF", "background": "var(--wp--preset--color--primary)" }
      }
    }
  },
  "styles": {
    "color": { "background": "var(--wp--preset--color--bg)", "text": "var(--wp--preset--color--fg)" },
    "typography": { "fontFamily": "var(--wp--preset--font-family--body)", "fontSize": "var(--wp--preset--font-size--md)" },
    "elements": {
      "link": {
        "color": { "text": "var(--wp--preset--color--primary)" }
      }
    }
  },
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" }
  ]
}

